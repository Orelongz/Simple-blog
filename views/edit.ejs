<% include partials/header %>

<div class="container space-top">
	<h1 class="text-center">Edit "<%= blog.title %>"</h1>
	<div class="row">
		<div class="col-sm-1 col-md-2 col-lg-3"></div>
		<div class="col-sm-10 col-md-8 col-lg-6">
			<div class="card">
				<div class="container">
					<form action="/blog/<%= blog._id %>?_method=PUT" method="POST">
						<div class="form-group">
					    	<label>Title</label>
					    	<input type="text" class="form-control" name="blog[title]" value="<%= blog.title %>">
					    	<label>Image</label>
					    	<input type="text" class="form-control" name="blog[image]" value="<%= blog.image %>">
					    	<label>Story</label>
					    	<textarea class="form-control" name="blog[story]"><%- blog.story %></Textarea>
						</div>
						<div class="row mr-auto">
							<div class="ml-auto">
								<input type="submit" class="btn btn-sm btn-primary">
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
		<div class="col-sm-1 col-md-2 col-lg-3"></div>
	</div>
</div>


<% include partials/footer %>
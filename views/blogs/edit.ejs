<% include ./../partials/header %>

<div class="container my-5">
	<h1 class="text-center">Edit "<%= blog.title %>"</h1>
	<div class="row">
		<div class="col-sm-1 col-md-2 col-lg-2"></div>
		<div class="col-sm-10 col-md-8 col-lg-8">
			<div class="card">
				<div class="container">
					<form class="form-group" action="/blog/<%= blog._id %>?_method=PUT" method="POST">
				    	<label>Title</label>
				    	<input type="text" class="form-control" name="blog[title]" value="<%= blog.title %>">
				    	<label>Image</label>
				    	<input type="text" class="form-control" name="blog[image]" value="<%= blog.image %>">
				    	<label>Story</label>
				    	<textarea class="form-control" name="blog[story]" rows="10"><%- blog.story %></Textarea>
						<button class="btn btn-primary d-block my-3 ml-auto">Submit</button>
					</form>
				</div>
			</div>
		</div>
		<div class="col-sm-1 col-md-2 col-lg-2"></div>
	</div>
</div>


<% include ./../partials/footer %>
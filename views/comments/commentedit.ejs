<% include ./../partials/header %>

<div class="container my-5">
	<h3 class="text-center"> Edit comment </h3>
	<div class="row">
		<div class="col-sm-12 col-md-3 col-lg-3"></div>
		<div class="col-sm-12 col-md-6 col-lg-6">
			<div class="card">
				<div class="container">
					<form class="form-group my-2" action="/blog/<%= id %>/comment/<%= comment._id %>/edit?_method=PUT" method="POST">

						<textarea class="form-control" type="text" name="comment[comment]" ><%= comment.comment %></textarea>

						<button class="btn btn-success d-block ml-auto mt-2">Update</button>
					</form>
				</div>
			</div>
		</div>
		<div class="col-sm-12 col-md-3 col-lg-3"></div>
</div>

<% include ./../partials/footer %>
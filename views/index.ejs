<% include partials/header %>

<div class="container my-2">
	<div class="row">
		<div class="col-sm-12 col-md-9 col-mlgd-9"></div>
		<div class="col-sm-12 col-md-3 col-mlgd-3">
			<form class="input-group" action="/blog" method="GET">
				<input type="text" class="form-control" placeholder="Search" name="q">
				<button class="input-group-addon btn btn-outline-success">Search</button>
			</form>
		</div>
	</div>
</div>

<div class="container-fluid my-3">
	<h1 class="text-center">Welcome to myBlog</h1>
	<div class="row">
		<div class="col-sm-12 col-md-2 col-lg-2"></div>
		<div class="col-sm-12 col-md-8 col-lg-8">
			<div class="card">
				<div class="container my-3">

					<% if (notFound !== null) { %>
						<h5 class="text-center">"<%= notFound %>" does not match any available title. Kindly search again</h5>
					<% } %>

					<!--logic comes here -->

					<% blogs.forEach(function(blog) { %>
					
					<h3><%= blog.title %></h3>
					<div class="row">

						<% if (blog.image === undefined || blog.image === "") { %>

							<div class="col-md-12">
								<p class="lead"><%= blog.story.substring(0, 50) %>...</p>
								<a href="/blog/<%= blog._id %>" class="btn btn-sm btn-primary">View</a>
							</div>

						<% } else { %>

						<div class="col-md-4">
							<div class="img-thumbnail" >
								<a href="/blog/<%= blog._id %>" ><img src="<%= blog.image %>" class="imglittle"></a>
							</div>
						</div>
						<div class="col-md-8">
							<p class="lead"><%= blog.story.substring(0, 50) %>...</p>
							<a href="/blog/<%= blog._id %>" class="btn btn-sm btn-primary">View</a>
						</div>

						<% } %>

					</div>
					<hr>
					<% }); %>
				</div>
			</div>
		</div>
		<div class="col-sm-12 col-md-2 col-lg-2"></div>
	</div>
</div>

<% include partials/footer %>